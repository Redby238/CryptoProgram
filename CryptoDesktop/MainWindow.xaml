<Window x:Class="CryptoDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="CryptoListView" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Rank" DisplayMemberBinding="{Binding Path=rank}" Width="50"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=name}" Width="150"/>
                    <GridViewColumn Header="Symbol" DisplayMemberBinding="{Binding Path=symbol}" Width="100"/>
                    <GridViewColumn Header="Price (USD)" DisplayMemberBinding="{Binding Path=priceUsd}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Margin="67,189,166,217" Grid.Column="1"/>
    </Grid>
</Window>